      <% else %>
        <li><a href="/login">Login</a></li>
        <li>|</li>
        <li><a href="/users/new">Sign Up</a></li>
        <li>|</li>
      <% end %>
      <li><a href="/posts/new">CHANGE THIS FOR ASSESSMENT</a></li>
    </ul>
  </header>
  <%= yield %>
</body>
</html>
